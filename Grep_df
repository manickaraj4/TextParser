 clear; echo Usage:; echo ; df |  grep -v "tmpfs" | grep -v "Available" | awk ' {total+=$2;used+=$3;avail+=$4} END { GB =1048576;TB =1073741824; if(total/GB>1000) print "total = "total/TB" TB\n"; else print "total = "total/GB" GB\n";if(used/GB>1000) print "used = "used/TB" TB\n"; else print "used = "used/GB" GB\n";if(total/GB>1000) print "avail = "avail/TB" TB\n"; else print "avail = "avail/GB" GB\n";}'
